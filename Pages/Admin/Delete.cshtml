@page
@model currentworkingsassyplanner.Pages.Admin.DeleteModel

@{
    //Edited by Adam Sinclair, scaffolded from Razor Pages scaffolding.
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/index.css">
<link rel="stylesheet" href="~/css/adminpanel.css" />

<h1>Delete Item</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="container-fluid">
    <div class="row">
        <div class="d-flex col-md-6"> 
            <div class="row">
                <div class="col-md-12 align-items-center" style="height: 25vh;">
                    @Html.DisplayFor(model => model.ProductTBL.ProductName)

                </div>
                <div class="col-md-12 align-items-center" style="height: 25vh;">
                    @Html.DisplayFor(model => model.ProductTBL.ProductImageDescription)

                </div>
                <div class="col-md-12 align-items-center" style="height: 25vh;">
                    £@Html.DisplayFor(model => model.ProductTBL.ProductPrice)

                </div>
                <div class="col-md-12 align-items-center" style="height: 25vh;">
                    <form method="post">
                        <input type="hidden" asp-for="ProductTBL.ProductID" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                    <a asp-page="Index" id="back-to-list">Back to List </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <!-- <img src="image.jpg" alt="Image" style="width: 100%; height: 100vh; object-fit: cover;">  -->
            @try
            {
                <img class="img-fluid align-content-center"
                     style="width: 30em; height: 40em;"
                     src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.ProductTBL.ProductImageData))"
                     alt="@Model.ProductTBL.ProductImageData">

            }
            catch
            {
                <p>Image failed to load. </p>
            }
        </div>
    </div>
</div>

